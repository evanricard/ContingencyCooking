
@{
    ViewBag.Title = "Leaderboard";
}

<h2>Leaderboard</h2>

<table class="table">
    <thead><tr><th>Username</th><th>Total Attempts</th><th>Average Difficulty</th><th>Average Ingredients</th></tr></thead>
    @foreach (var user in ViewBag.Users)
    {
        <tr><td>@user.UserName.ToString()</td><td>@user.TotalAttempts</td><td>@user.AveDifficulty</td><td>@user.AveIngredients</td></tr>
    }
</table>