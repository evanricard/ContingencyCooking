
@{
    ViewBag.Title = "Leaderboard";
}

<style>
    th{
        text-align:left;

    }
</style>

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2 class="text-center">Leaderboard</h2>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Total Attempts</th>
                        <th>Average Difficulty</th>
                        <th>Average Ingredients</th>
                    </tr>

                    <tr>
                        <th><a href="/Leaderboard/OrderByUserName"><span>&#x25B2;</span></a><br /><a href="/Leaderboard/OrderByUserNameDescending"><span>&#x25BC;</span></a></th>
                        <th><a href="/Leaderboard/OrderByTotalAttempts"><span>&#x25B2;</span></a><br /><a href="/Leaderboard/OrderByTotalAttemptsDescending"><span>&#x25BC;</span></a></th>
                        <th><a href="/Leaderboard/OrderByAverageDifficulty"><span>&#x25B2;</span></a><br /><a href="/Leaderboard/OrderByAverageDifficultyDescending"><span>&#x25BC;</span></a></th>
                        <th><a href="/Leaderboard/OrderByAverageIngredients"><span>&#x25B2;</span></a><br /><a href="/Leaderboard/OrderByAverageIngredientsDescending"><span>&#x25BC;</span></a></th>
                    </tr>
                </thead>
                @foreach (var user in ViewBag.Users)
                {
                    <tr><td>@user.UserName.ToString()</td><td>@user.TotalAttempts</td><td>@user.AveDifficulty</td><td>@user.AveIngredients</td></tr>
                }
            </table>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Title</th>
                        <th>Number of Ratings</th>
                        <th>Average Rating</th>
                        <th>Image</th>
                    </tr>
                </thead>
                @foreach (var rating in ViewBag.Ratings)
                {
                    <tr><td>@rating.UserName</td><td>@rating.Title</td><td>@rating.NumberOfRatings</td><td>@rating.AveRating</td><td><img src="@rating.Image" style="height: 120px" /></td></tr>
                }
            </table>
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
